<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_windows_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Windows Status"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <!-- Window Status -->
    <TextView
        android:id="@+id/tv_window_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Windows are currently closed"
        android:textSize="18sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/tv_windows_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Refresh Button -->
    <Button
        android:id="@+id/btn_refresh_windows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh Status"
        app:layout_constraintTop_toBottomOf="@id/tv_window_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
